<h1>Welcome <%= params[:username] %></h1>

<p> Voici la liste des potins :</p>

<div class='card-columns'>
	<% @gossips.each do |gossip| %>
		<div class="card" style="width: 18rem;">
		  <!-- <img src="..." class="card-img-top" alt="..."> -->
		  <div class="card-body">
		    <h5 class="card-title"><%= link_to gossip.title , gossips_path(gossip.id)%></h5>
		    	<p>Déposé par : <%= link_to gossip.user.first_name , authors_path(gossip.user.id)%></p>
		  </div>
		</div>
	 <% end %>
</div>