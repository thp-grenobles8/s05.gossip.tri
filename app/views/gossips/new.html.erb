<% flash.each do |key, value| %>
<div class="alert alert-danger">
	<% if @gossip.errors.any? %>
	  	<p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
		  	<ul>
			    <% @gossip.errors.full_messages.each do |message| %>
			      <li><%= message %></li>
			    <% end %>
		  	</ul>
	<% end %>
</div>
<% end %>

<h1>Page de création des potins</h1>
<p>Merci de renseigner les champs suivants :</p>

    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Titre :' %>
      <br />
      <%= text_field_tag 'title' %>
      <br /> <br />

      <%= label_tag 'Contenu :' %>
      <br />
      <%= text_area_tag 'content' %>
      <br /> <br />
      Add a tag ?
      <%= select_tag 'tag', options_for_select(@tag.collect{ |u| [u.title] }), :include_blank => true %>
      <br /> <br />
      <%= submit_tag "Create Gossip" %>

    <% end %>

 

